<div class="row">
  <div class="col-xs-12 col-md-10">
    <h2>Search Results:</h2>

    <h3>Users:</h3>
      <ul>
        <% unless @users.empty? %>
          <% @users.each do |user| %>
            <div class="col-sm-6 col-md-3">
              <div class="user_index">
                <h3><%= link_to user.username, user_path(user) %> </h3>
                <div class='thumbnail' style='background-image:url(<%= user.image_url %>)'></div>
              </div>
            </div>
          <% end %>
        <% else %>
          <h4>There are no users that match your request.</h4>
        <% end %>

      </ul>
    <br style="clear:both">
    <h3>Pictures:</h3>
        <% unless @pictures.empty? %>
          <%= render :partial => 'pictures/picture', :collection => @pictures %>
        <% else %>
          <h4>There are no pictures that match your request.</h4>
        <% end %>

  </div>

    <%= render :partial => 'users/sidenav', :locals => {:user => @authenticated} %>
</div>


