<div class="row">
  <div class="col-xs-12 col-md-10">

    <h1>This is the page that displays A SINGLE category</h1>

    <h2><%= @category.name %></h2>
    <% if @category.owner_id == @authenticated.id %>
      <%= link_to 'Edit Category', edit_category_path(@category) %>
      <%= button_to 'Delete Category', category_path(@category), :method => 'delete', :confirm => 'Are you sure you want to delete this category?' %>
    <% end %>

    <h5>Users within this category</h4>
      <ul>
        <% @category.users.each do |user| %>
            <li><%= user.username %></li>
        <% end %>
      </ul>

    <h5>Pictures within this category</h4>
       <%= render :partial => 'pictures/picture', :collection => @pictures %>

  </div>

    <%= render :partial => 'users/sidenav', :locals => {:user => @authenticated} %>
</div>

