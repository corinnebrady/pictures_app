<h1>This is the users/show page</h1>

<div class="btn-group-vertical">
  <% if @user.id == @authenticated.id %>
    <%= link_to 'Edit Profile', edit_users_path %>
    <%= link_to 'Add Picture', new_picture_path %>
<!--     < %= link_to 'Add Category', new_category_path %>
 -->  <% end %>
  <% if @user.id != @authenticated.id %>
    <%= link_to 'Add to a Category', categories_add_user_to_categories_edit_path %>
  <% end %>

</div>

<h2><%= @user.username %> </h2>
<%= image_tag @user.image %>

<h5>Categories</h4>

  <% @user.categories.each do |category| %>
    <%= link_to category.name, category_path(category) %>
  <% end %>

<h3>My Pictures</h3>
   <%= link_to 'New Picture', new_picture_path(@picture) %>

  <% @user.pictures.each do |picture| %>
    <h4><%= picture.name %> </h4>
    <%= link_to (image_tag picture.picture), picture_path(picture) %>
    <p><%= picture.description %> </p>
  <% end %>





