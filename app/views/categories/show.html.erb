<div class="row">
  <%= render :partial => 'users/sidenav', :locals => {:user => @authenticated} %>

  <div class="col-md-10 col-md-pull-2">

    <h2>Category: <%= @category.name %></h2>

    <div class="pull-right">
      <% if @category.owner_id == @authenticated.id %>
        <%= link_to 'Edit Category', edit_category_path(@category) %>
        <%= button_to 'Delete Category', category_path(@category), :method => 'delete', :confirm => 'Are you sure you want to delete this category?' %>
      <% end %>
    </div>

    <div class="category_display">
      <h4>Users within this category</h4>
        <ul>
          <% @category.users.each do |user| %>
              <li><%= link_to user.username, user_path(user) %></li>
          <% end %>
        </ul>

      <h4>Pictures within this category</h4>
    </div>
    <% @category.users.each do |user| %>
       <%= render :partial => 'pictures/picture', :collection => user.pictures %>
    <% end %>
  </div>

</div>

