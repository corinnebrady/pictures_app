<h1>This is the users/show page</h1>

<div class="btn-group-vertical">
  <% if @user.id == @authenticated.id %>
    <%= link_to 'Edit Profile', edit_users_path %>
    <%= link_to 'Add Picture', new_picture_path %>
    <%= link_to 'Add Category', edit_category_path %>
  <% end %>
  <% if @user.id != @authenticated.id %>
    <%= link_to 'Add to a Category', edit_user_to_categories_path(@user) %>
  <% end %>

</div>

<h2><%= @user.username %> </h2>
<%= image_tag @user.image %>

<h5>Categories</h4>

  <% @user.owned_categories.each do |category| %>
    <%= link_to category.name, category_path(category) %>
  <% end %>

<h3>My Pictures</h3>
   <%= link_to 'New Picture', new_picture_path(@picture) %>

  <%= render :partial => 'pictures/picture', :collection => @user.pictures %>


