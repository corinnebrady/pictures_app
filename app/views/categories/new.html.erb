<h1>This is the category/NEW page</h1>


<% if @category.errors.any? %>
  <ol>
    <% @category.errors.full_messages.each do |msg| %>
      <li class="alert alert-warning"><%= msg %></div>
    <% end %>
  </ol>
<% end %>



<%= form_tag "/categories/new_category", :method => 'post' do %>
  <input type="hidden" name="id" value="new_category">
  <%= label_tag(:new_category, "Create a New Category:") %>
  <%= text_field_tag(:new_category) %>
  <br>
  <h4>Select who to add this category:</h4>
    <% @users.each do |user| %>
        <%= check_box_tag "user[]", user.id %><%= user.username %>
    <% end %>
  <br>
  <%= submit_tag("Submit") %>
<% end %>



